<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/foneTheory"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameLevel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fontFamily="@font"
                android:text="Here will be header"
                android:textAlignment="center"
                android:textColor="@color/foneButtonTheory"
                android:textSize="36sp"
                android:gravity="center_horizontal" />


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:backgroundTint="@color/foneButtonTheory"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_theory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                tools:listitem="@android:layout/simple_list_item_1" />




            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here will be text"
                />




        </LinearLayout>


    </ScrollView>

</LinearLayout>